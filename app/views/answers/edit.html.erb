<h1>Editing Answer</h1>
<div class="panel panel-default devise-bs">
  <div class="panel-heading">
    <h4>Answer</h4>
  </div>
  <div class="panel-body">
    <%= form_for([@question, @question.answers.build]) do |f| %>
      <div class="form-group">
        <%= f.label :Create_answer %>
      </div>
      <div class="form-group">
        <%= f.text_field :body, class: 'text_field form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :correctly? %><br>
        <%= f.check_box :correctly %>
      </div>
      <div class="form-group">
        <%= f.submit nil, class: 'btn btn-custom' %>
      </div>
    <% end %>
  </div>
</div>
