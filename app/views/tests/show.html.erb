<h3><%= @test.subject %> <%= @test.part %></h3>

<% @test.questions.each do |q| %>
  <div class="panel panel-default">
    <div class="panel-heading"><%= q.body %></div>
    <div class="panel-body">
      <% q.answers.each.with_index do |a, index| %>
        <%= index+1 %> <%= a.body %><br>
      <% end %>
    </div>
  </div>
<% end %>

<%= link_to 'Add question', new_question_path %>
<%= link_to 'Back', tests_path %>
